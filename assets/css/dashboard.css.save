 /* Evita doble scroll */
}

/* --- SIDEBAR (Menú Lateral) --- */
.sidebar {
    width: var(--width-sidebar);
    background: var(--bg-sidebar);
    color: var(--color-sidebar-text);
    flex-shrink: 0;
    display: flex;
    flex-direction: column;
    height: 100vh;
    position: relative;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 1000;
}

.sidebar-header {
    padding: 20px;
    background: rgba(0,0,0,0.1);
    border-bottom: 1px solid rgba(255,255,255,0.05);
}

.brand {
    margin: 0;
    font-size: 1.2rem;
    font-weight: 700;
    color: #fff;
    letter-spacing: 1px;
}

.menu {
    flex: 1;
    padding: 10px 0;
    overflow-y: auto;
}

.menu-item {
    display: flex;
    align-items: center;
    padding: 12px 20px;
    color: #94a3b8;
    text-decoration: none;
    transition: all 0.2s;
    border-left: 3px solid transparent;
}

.menu-item i {
    margin-right: 12px;
    font-size: 1.1rem;
    width: 20px;
    text-align: center;
}

.menu-item:hover {
    color: #fff;
    background: rgba(255,255,255,0.05);
}

.menu-item.is-active {
    color: #fff;
    background: rgba(87, 85, 217, 0.1); /* Tinte del color primario */
    border-left-color: var(--color-primary);
}

/* --- MAIN CONTENT (Zona derecha) --- */
.main-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    height: 100vh;
    overflow-y: auto; /* Scroll independiente para el contenido */
    position: relative;
    background: var(--bg-body);
}

/* ============================================================
   3. COMPONENTES DEL DASHBOARD
============================================================ */

/* Topbar (Barra superior blanca) */
.topbar {
    background: #fff;
    padding: 15px 24px;
    box-shadow: 0 1px 2px rgba(0,0,0,0.05);
    display: flex;
    align-items: center;
    justify-content: space-between;
    min-height: 60px;
}

.topbar h2 {
    margin: 0;
    font-size: 1.2rem;
    color: #333;
}

/* Tarjetas (Cards) */
.card {
    border: none;
    border-radius: 12px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.02), 0 2px 4px -1px rgba(0, 0, 0, 0.02);
    background: #fff;
    height: 100%; /* Para igualar alturas en columnas */
    transition: transform 0.2s;
}

.card-header {
    padding: 16px 20px;
    border-bottom: 1px solid #f1f5f9;
}

.card-title {
    font-weight: 600;
    color: #334155;
    font-size: 0.95rem;
}

.card-body {
    padding: 20px;
}

/* Utilidades de Texto y Color */
.text-success { color: #22c55e !important; }
.text-error { color: #ef4444 !important; }
.text-gray { color: #64748b !important; }
.text-bold { font-weight: 600; }
.uppercase { text-transform: uppercase; letter-spacing: 0.5px; }

/* Tablas */
.table td, .table th {
    padding: 12px 8px;
    border-bottom: 1px solid #f1f5f9;
}
.table tr:last-child td {
    border-bottom: none;
}

/* Botón Hamburguesa (Solo visible en móvil) */
#toggleMenu {
    display: none; /* Oculto en escritorio */
    color: #333;
    padding: 0;
    margin-right: 15px;
    font-size: 1.2rem;
}

/* ============================================================
   4. RESPONSIVE / MÓVIL (Max-width: 960px)
============================================================ */
@media (max-width: 960px) {
    
    /* El Sidebar se convierte en un menú "off-canvas" fijo */
    .sidebar {
        position: fixed;
        left: -240px; /* Escondido a la izquierda */
        top: 0;
        bottom: 0;
        box-shadow: 5px 0 15px rgba(0,0,0,0.1);
    }

    /* Clase activa para mostrar el menú */
    .sidebar.active {
        left: 0;
    }

    /* Mostrar el botón hamburguesa */
    #toggleMenu {
        display: inline-block;
    }

    /* Ajuste de padding en el contenedor principal */
    .main-content {
        width: 100%;
    }
    
    .container {
        padding: 10px;
    }
}

/* ============================================================
   5. PANELES LATERALES (Para edición futura)
============================================================ */
.side-panel {
    position: fixed;
    top: 0;
    right: -450px;
    width: 400px;
    max-width: 90%;
    height: 100vh;
    background: #fff;
    box-shadow: -5px 0 25px rgba(0,0,0,0.15);
    z-index: 2000;
    transition: right 0.3s ease;
    display: flex;
    flex-direction: column;
}

.side-panel.visible {
    right: 0;
}

.overlay {
    position: fixed;
    top: 0; left: 0; right: 0; bottom: 0;
    background: rgba(0,0,0,0.4);
    backdrop-filter: blur(2px);
    z-index: 1500;
    display: none;
}

.overlay.visible {
    display: blblock;
}
